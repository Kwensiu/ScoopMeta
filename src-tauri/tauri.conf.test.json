{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rscoop",
  "version": "1.4.8-beta.1",
  "identifier": "com.rscoop.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Rscoop",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "",
      "endpoints": [
        "https://raw.githubusercontent.com/Kwensiu/Rscoop/main/docs/test-update.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    },
    "store": null,
    "dialog": null
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "fragmentPaths": [
          "./windows/fragments/env-refresh.wxs"
        ]
      }
    }
  }
}