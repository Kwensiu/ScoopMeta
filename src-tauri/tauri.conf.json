{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rscoop",
  "version": "1.6.0",
  "identifier": "com.rscoop.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run sync-locales && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Rscoop",
        "width": 800,
        "height": 600,
        "minWidth": 730,
        "minHeight": 450
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXkgREUzNDBBOUZCRkZGMzg5Qg0KUldTYk9QKy9ud28wM21SRUdEd25sNXdtNXZyZVFZcWNFUDN3MDVUdEhGSHRKVXowVmVQbHVCUVcNCg==",
      "endpoints": [
        "https://github.com/Kwensiu/Rscoop/releases/latest/download/update.json"
      ],
      "windows": {
        "installMode": "basicUi"
      }
    },
    "store": null,
    "dialog": null
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      },
      "wix": {
        "fragmentPaths": [
          "./windows/fragments/env-refresh.wxs"
        ]
      }
    }
  }
}